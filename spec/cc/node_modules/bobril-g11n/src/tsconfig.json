{
    "version": "1.6.0-beta",
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": false,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "./*.ts",
        "../typings/moment/moment-node.d.ts",
        "../typings/numeral/numeral.d.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./RuntimeFunctionGenerator.ts",
        "./jsonp.ts",
        "./localeDataStorage.ts",
        "./msgFormatParser.ts",
        "./msgFormatter.ts",
        "./translate.ts",
        "../typings/moment/moment-node.d.ts",
        "../typings/numeral/numeral.d.ts"
    ]
}
